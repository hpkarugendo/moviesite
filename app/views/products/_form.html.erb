<div id="product_wrap">
  <div class="all_content">
    <%= form_for(@product) do |f| %>
        <% if @product.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

              <ul>
                <% @product.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="field">
          <%= f.label :photo %><br />
          <%= f.text_field :photo %>
        </div>
        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.label :price %><br />
          <%= f.text_field :price %>
        </div>
        <div class="field">
          <%= f.label :disc %><br />
          <%= f.select :disc, %w(Bluray DVD CD) %>
        </div>
        <div class="field">
          <%= f.label :product_info %><br />
          <%= f.text_area(:product_info, size: "50x10") %>
        </div>
        <div class="field">
          <%= f.label :quantity %><br />
          <%= f.text_field :quantity %>
        </div>
        <div class="actions">
          <%= f.submit %>
        </div>
    <% end %>
  </div>
</div>
