<p id="notice"><%= notice %></p>

<div id="cu-wrap">
	<div id="profile">
      <p>
        <%= image_tag(@customer.photo, :alt => "photo") %>
      </p>

      <h3>Name</h3>
      <p>
        <%= @customer.name %>
      </p>

      <h3>Email</h3>
      <p>
